<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>


  <li>
    <label class="checkbox">
      <input type="checkbox" value=""
      <% if task.completed %>
      <%= "checked" %>>
      <% end %>
    </label>
    <%= link_to task.title, task %> (<%= task.details %>)
  </li>

  <%= link_to raw('<i class="fas fa-pen"></i>'), edit_task_path(task) %>
  <%= link_to(raw('<i class="fas fa-trash-alt"></i>'), task_path(task), method: :delete, class: 'delete', data: { confirm: "Delete '#{task.title}'?" }) %>




  <% end %>


</ul>

<div> ------------------------------
  <br>
</br>
</div>




 <%= link_to new_task_path, class: "btn btn-primary" do %>
  <i class="fas fa-plus"></i>ADD A NEW TASK
 <% end %>
